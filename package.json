{
  "name": "tsuibami",
  "version": "0.1.0",
  "description": "mini editor for esa.io",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build/ && mkdir -p build",
    "build:js": "cp -a src/js/ build/",
    "build:lib": "cp -a lib/ build/lib/",
    "build:metadata": "cp -a metadata/* build/",
    "build:html": "./scripts/build_haml.sh",
    "build:css": "node-sass -q src/sass -o build",
    "build": "npm-run-all clean build:js build:lib build:metadata build:html build:css",
    "watch": "watchy -w src -- npm run build",
    "release": "gulp release"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yoshihara/tsuibami.git"
  },
  "keywords": [
    "esa.io"
  ],
  "author": "yoshihara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yoshihara/tsuibami/issues"
  },
  "homepage": "https://github.com/yoshihara/tsuibami",
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "del": "^2.0.2",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.5.2",
    "gulp-download": "0.0.1",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.0.1",
    "gulp-ruby-haml": "0.0.4",
    "gulp-sass": "^2.0.4",
    "gulp-uglify": "^1.1.0",
    "gulp-zip": "^3.0.2",
    "npm-run-all": "^1.7.0",
    "run-sequence": "^1.1.4",
    "watchy": "^0.6.6"
  }
}
