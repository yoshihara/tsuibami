{
  "name": "tsuibami",
  "version": "0.1.0",
  "description": "mini editor for esa.io",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build/ && mkdir -p build",
    "build:js": "rm -rf build/*.js && cp -a src/js/ build/",
    "build:lib": "rm -rf build/lib/ && cp -a lib/ build/lib/",
    "build:metadata": "cp -a metadata/* build/",
    "build:html": "./scripts/build_haml.sh",
    "build:css": "node-sass -q src/sass -o build",
    "build": "npm-run-all clean build:js build:lib build:metadata build:html build:css",
    "watch:js": "watchy -w src/js -- npm run build:js",
    "watch:lib": "watchy -w lib -- npm run build:lib",
    "watch": "watchy -w src -w lib -- npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yoshihara/tsuibami.git"
  },
  "keywords": [
    "esa.io"
  ],
  "author": "yoshihara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yoshihara/tsuibami/issues"
  },
  "homepage": "https://github.com/yoshihara/tsuibami",
  "devDependencies": {
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.7.0",
    "watchy": "^0.6.6"
  }
}
