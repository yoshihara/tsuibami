{
  "name": "tsuibami",
  "version": "0.3.0",
  "description": "mini editor for esa.io",
  "main": "index.js",
  "scripts": {
    "package": "rm -f tsuibami.zip && yarn run build && zip tsuibami.zip -j build/*",
    "clean": "rm -rf build/ && mkdir -p build",
    "build:js": "webpack --config webpack.config.js",
    "build:metadata": "rm -rf build/*.png build/manifest.json && cp -a metadata/* build/",
    "build:html": "rm -rf build/*.html && pug -o build/ src/pug",
    "build:css": "rm -rf build/*.css && node-sass -q src/sass -o build",
    "build": "npm-run-all clean build:*",
    "watch:js": "watchy -w src/js -w webpack.config.js -- yarn run build:js",
    "watch:lib": "watchy -w lib -- npm run build:js",
    "watch:metadata": "watchy -w metadata -- yarn run build:metadata",
    "watch:html": "watchy -w src/pug -- npm run build:html",
    "watch:css": "watchy -w src/sass -- npm run build:css",
    "watch": "npm-run-all clean -p watch:*",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:yoshihara/tsuibami.git"
  },
  "keywords": [
    "esa.io"
  ],
  "author": "yoshihara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yoshihara/tsuibami/issues"
  },
  "homepage": "https://github.com/yoshihara/tsuibami",
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.1.0",
    "expose-loader": "^0.7.5",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.17.0",
    "pug-cli": "^1.0.0-alpha6",
    "watchy": "^0.9.7",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "bluebird": "^3.5.4",
    "jquery": "^3.4.1",
    "lodash": "^4.17.11"
  },
  "jest": {
    "automock": true,
    "unmockedModulePathPatterns": [
      "node_modules"
    ],
    "setupFiles": [
      "./__test__/setup-jest.js"
    ]
  }
}
